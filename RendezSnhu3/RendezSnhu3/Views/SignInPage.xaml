<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RendezSnhu3.Views.SignInPage"
             NavigationPage.HasNavigationBar="False">


    <ContentPage.Content>
        <Frame BackgroundColor="#1a346f" HorizontalOptions="Start" CornerRadius="0" >
            <StackLayout BackgroundColor="Transparent">
                <Image Source="signintitle.png" Scale=".5"/>
                <Frame BackgroundColor="#898989" CornerRadius="5" Padding="4">
                <StackLayout BackgroundColor="Transparent" Spacing="5" Padding="5">           
 
                    <Label Text="Email:" TextColor="#1a346f" FontSize="18"/>

                        <Entry
                            x:Name= "usernametxt"
                            MaxLength="30">
                        </Entry>


                        <Label Text="Password:" TextColor="#1a346f" FontSize="18"/>

                            <Entry 
                            x:Name = "passwordtxt"
                            MaxLength="20">
                            </Entry>
 
                        <Button 
                    
                            BackgroundColor="#1a346f" VerticalOptions="Center" 
                            HorizontalOptions="Center" Padding="65,10,65,10" CornerRadius="5"                
                            Text="Sign In" TextColor="#ebb10e" FontSize="20"   
                            Clicked="SignInClicked">
                        </Button>
            </StackLayout>
                </Frame>
                <Button BackgroundColor="#00aa1c" Text="Create Account" FontAttributes="Bold" FontSize="20" CornerRadius="5" Clicked="CreateAccountClicked"/>
                <Label Text="" TextColor="Green" FontSize="20" x:Name="Notificationtxt"/>
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>
    